<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BenchmarkModeActivity"
    android:screenOrientation="portrait">

  <Button
      android:id="@+id/benchAddFace"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="60dp"
      android:layout_marginTop="84dp"
      android:text="@string/BenchmarkMode_AddFace_Text"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/benchMakePhoto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="104dp"
      android:layout_marginTop="220dp"
      android:layout_marginEnd="104dp"
      android:text="@string/BenchmarkMode_MakePhoto_Text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/benchTest"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="162dp"
      android:layout_marginEnd="162dp"
      android:layout_marginBottom="37dp"
      android:text="@string/BenchmarkMode_Text_Text"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/numberOfFacesView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="180dp"
      android:layout_marginEnd="180dp"
      android:layout_marginBottom="18dp"
      android:textSize="24sp"
      app:layout_constraintBottom_toTopOf="@+id/benchAddFace"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/numberOfPhotosView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="180dp"
      android:layout_marginEnd="180dp"
      android:layout_marginBottom="18dp"
      android:textSize="24sp"
      app:layout_constraintBottom_toTopOf="@+id/benchMakePhoto"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/benchDeleteFace"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="84dp"
      android:layout_marginEnd="60dp"
      android:text="@string/BenchmarkMode_DeleteFaceButton_Text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>